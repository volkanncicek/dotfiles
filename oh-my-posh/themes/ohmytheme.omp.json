{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "auto_upgrade": true,
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "palette": {
    "os": "#2b04d6",
    "path": "#688ad4",
    "git": "#fffb38",
    "git-work": "#FF9248",
    "git-conflict": "#ff4500",
    "git-sync": "#B388FF",
    "python": "#FFDE57",
    "node": "#6CA35E",
    "root": "#ffff66",
    "time": "#2e9599",
    "exec": "#83769c",
    "status-ok-bg": "#43A047",
    "status-fail-bg": "#e91e63",
    "text-dark": "#111111",
    "text-light": "#ffffff"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "trailing_diamond": "\ue0b0",
          "template": " {{ .UserName }} ",
          "foreground": "p:text-light",
          "background": "p:os"
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uea83 {{ .Path }} ",
          "foreground": "p:text-light",
          "background": "p:path",
          "properties": {
            "folder_separator_icon": " \ue0b1 ",
            "home_icon": "~",
            "style": "folder"
          }
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " {{ .UpstreamIcon }}{{ .HEAD }}{{if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Working.Changed) (.Staging.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} ",
          "foreground": "p:text-dark",
          "background": "p:git",
          "background_templates": [
            "{{ if or (.Working.Changed) (.Staging.Changed) }}p:git-work{{ end }}",
            "{{ if and (gt .Ahead 0) (gt .Behind 0) }}p:git-conflict{{ end }}",
            "{{ if gt .Ahead 0 }}p:git-sync{{ end }}",
            "{{ if gt .Behind 0 }}p:git-sync{{ end }}"
          ],
          "properties": {
            "branch_max_length": 25,
            "fetch_stash_count": true,
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:text-light",
          "background": "p:node",
          "template": " {{ .PackageManagerIcon }} {{ .Full }} ",
          "properties": {
            "fetch_package_manager": true
          }
        },
        {
          "type": "python",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \ue235 {{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }} ",
          "foreground": "p:text-dark",
          "background": "p:python",
          "properties": {
            "display_mode": "files",
            "fetch_virtual_env": true
          }
        },
        {
          "type": "root",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \uf0ad ",
          "foreground": "p:text-dark",
          "background": "p:root"
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": " \ueba2 {{ .FormattedMs }} ",
          "foreground": "p:text-light",
          "background": "p:exec",
          "properties": {
            "always_enabled": true
          }
        },
        {
          "type": "time",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "template": "<#fff>\ue641 {{ .CurrentDate | date .Format }} ",
          "foreground": "p:text-dark",
          "background": "p:time",
          "properties": {
            "time_format": "15:04"
          }
        },
        {
          "type": "status",
          "style": "diamond",
          "trailing_diamond": "\ue0b4",
          "foreground": "p:text-light",
          "background": "#b2b8b7",
          "background_templates": [
            "{{ if gt .Code 0 }}p:status-fail-bg{{ else }}p:status-ok-bg{{ end }}"
          ],
          "template": "{{ if gt .Code 0 }} \uf00d {{ else }} \uf00c {{ end }}",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ]
}